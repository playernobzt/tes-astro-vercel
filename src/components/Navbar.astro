---
const { pathname } = Astro.url;

const lists = [
  { nama: "Home", url: "/" },
  { nama: "PokeDex", url: "/pokedex" },
];

const baseClass = "hover:border-b-[3px] border-b-orange-400";
---

<nav class="flex items-end justify-between p-4 bg-white">
  <h1 class="text-2x1 font-semibold">Poke</h1>
  <ul class="flex basis-4/5 gap-x-8">
    {
      lists.map((item) => (
        <li>
          <a
            class:list={[
              baseClass,
              { "border-b-[3px]": item.url === pathname },
            ]}
            href={item.url}
          >
            {item.nama}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
